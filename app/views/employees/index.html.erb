  <div class="max-w-7xl mx-auto py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Employees List</h1>
    <div class="mt-6 space-y-4 mb-2">
      <div class='flex'>
        <%= link_to vacation_requests_path, class: "inline-block px-4 py-2 bg-gray-600 text-white rounded-md shadow-sm hover:bg-gray-700 transition duration-300 flex items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 mr-2 mb-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6M3 6h18M5 6v14a2 2 0 002 2h10a2 2 0 002-2V6" />
          </svg>
          All Vacation Requests
        <% end %>
      </div>
    </div>
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-gray-800 text-white">
    <tr>
      <th class="w-1/3 px-6 py-4 text-left text-sm font-semibold">Name</th>
      <th class="w-1/3 px-6 py-4 text-left text-sm font-semibold">Date of Birth</th>
      <th class="w-1/3 px-6 py-4 text-left text-sm font-semibold">Department</th>
      <th class="w-1/3 px-6 py-4 text-left text-sm font-semibold">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @employees.any? %>
      <% @employees.each do |employee| %>
        <tr class="border-t border-gray-200 hover:bg-gray-50">
          <td class="px-6 py-4"><%= employee.name %></td>
          <td class="px-6 py-4"><%= employee.date_of_birth.strftime('%B %d, %Y') %></td>
          <td class="px-6 py-4"><%= employee.department.name %></td>
          <td class="px-4 py-2">
            <%= link_to employee_vacation_requests_path(employee.id), class: "inline-block px-[6px] py-[4px] m-1 text-xs bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300" do %>
              <div class='flex'>
                Vacation Requests
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4" class="text-center px-6 py-4 text-gray-500">
          No employees found.
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

    <div class="mt-6 space-y-4">
      <div class="mt-6">
        <%= paginate(@employees) %>
      </div>
    </div>
  </div>